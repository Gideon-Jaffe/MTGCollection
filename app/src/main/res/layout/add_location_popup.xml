<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/location_popup_name_text"
        android:layout_height="48dp"
        android:layout_width="100dp"
        android:text="Name"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/location_popup_name_input"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="10"
        app:layout_constraintStart_toEndOf="@id/location_popup_name_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/location_popup_name_text"/>

    <TextView
        android:id="@+id/location_popup_low_price_text"
        android:layout_height="48dp"
        android:layout_width="100dp"
        android:text="From Price"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/location_popup_name_text"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"/>

    <EditText
        android:id="@+id/location_popup_low_price"
        android:layout_height="48dp"
        android:layout_width="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="@+id/location_popup_low_price_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/location_popup_high_price_text"
        android:layout_height="48dp"
        android:layout_width="100dp"
        android:text="To Price"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/location_popup_low_price_text"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"/>

    <EditText
        android:id="@+id/location_popup_high_price"
        android:layout_height="48dp"
        android:layout_width="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="@+id/location_popup_high_price_text"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/location_popup_add_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="Add"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location_popup_high_price_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>